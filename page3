    <script>
        // Pricing toggle logic
        const monthlyBtn = document.getElementById('monthlyBtn');
        const annualBtn = document.getElementById('annualBtn');
        const starterPrice = document.getElementById('starterPrice');
        const proPrice = document.getElementById('proPrice');

        monthlyBtn.addEventListener('click', () => {
            monthlyBtn.classList.add('bg-white', 'text-primary');
            annualBtn.classList.remove('bg-white', 'text-primary');
            starterPrice.innerHTML = '$0 <span class="text-sm">/ 14-day trial</span>';
            proPrice.innerHTML = '$149 <span class="text-sm">/ month</span>';
        });

        annualBtn.addEventListener('click', () => {
            annualBtn.classList.add('bg-white', 'text-primary');
            monthlyBtn.classList.remove('bg-white', 'text-primary');
            starterPrice.innerHTML = '$0 <span class="text-sm">/ 14-day trial</span>';
            proPrice.innerHTML = '$134 <span class="text-sm">/ month (billed annually)</span>';
        });
    </script>
